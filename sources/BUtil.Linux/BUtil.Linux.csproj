<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	  <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	  <UseCommonOutputDirectory>true</UseCommonOutputDirectory>
	  <OutputPath>$(SolutionDir)..\Output\BUtil\bin\</OutputPath>
	  <PlatformName>linux</PlatformName>
  </PropertyGroup>

	<Target Name="CopyLibraries" AfterTargets="Build">
		<Copy SourceFiles="@(CopyLibraryFiles)" DestinationFolder="$(SolutionDir)..\Output\BUtil\bin" />
	</Target>

	<ItemGroup>
	  <ProjectReference Include="..\BUtil.Core\BUtil.Core.csproj" />
	</ItemGroup>
</Project>
