<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFramework>net7.0-windows</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <Nullable>enable</Nullable>
	  <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	  <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	  <UseCommonOutputDirectory>true</UseCommonOutputDirectory>
	  <OutputPath>$(SolutionDir)..\Output\BUtil\bin\</OutputPath>
	  <PlatformName>windows</PlatformName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MediaDevices" Version="1.10.0" />
    <PackageReference Include="TaskScheduler" Version="2.10.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BUtil.Core\BUtil.Core.csproj" />
  </ItemGroup>

  <PropertyGroup>
	<PreBuildEvent>
			cd "$(SolutionDir)..\Output"

			rem Libraries
			xcopy "%userprofile%\.nuget\packages\taskscheduler\2.10.1\lib\net6.0-windows7.0" "$(SolutionDir)..\Output\BUtil\bin" /Y/E
			xcopy "%userprofile%\.nuget\packages\mediadevices\1.10.0\lib\net7.0" "$(SolutionDir)..\Output\BUtil\bin" /Y
    </PreBuildEvent>
  </PropertyGroup>
</Project>
