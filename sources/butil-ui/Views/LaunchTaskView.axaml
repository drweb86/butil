	</UserControl.Resources>
	<UserControl.Styles>
		<Style Selector="Expander">
			<Setter Property="VerticalAlignment" Value="Top" />
		</Style>
		<Style Selector="Expander:expanded">
			<Setter Property="VerticalAlignment" Value="Stretch" />
		</Style>
	</UserControl.Styles>
	<Design.DataContext>
		<vm:LaunchTaskViewModel />
	</Design.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Menu is temporary and should be part of Configurator. -->
		<Menu Grid.Row="0">
			<MenuItem Header="âš™">
				<MenuItem Header="{Binding Theme_Title}">
					<MenuItem Header="{Binding DarkThemeLabel}" Command="{Binding GoDarkSide}" />
					<MenuItem Header="{Binding LightThemeLabel}" Command="{Binding GoLightSide}" />
				</MenuItem>
			</MenuItem>
		</Menu>
		<Expander Grid.Row="1" HorizontalAlignment="Stretch" Margin="24 8 24 8" IsExpanded="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
			<Expander.Header>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
						<TextBlock TextWrapping="Wrap"
								   Foreground="{Binding ProgressGenericBackground}"
								   Grid.Column="0" 
								   Margin="0 8 16 8" 
								   Text="{Binding ProgressGenericTitle}" 
								   VerticalAlignment="Center"
								   MaxWidth="{Binding $parent.Bounds.Width}"
						/>
					<ProgressBar
						IsVisible="{Binding IsStopButtonEnabled}"
						Grid.Column="1"
						MinHeight="32"
						Maximum="{Binding TotalTasksCount}" Value="{Binding CompletedTasksCount}" ShowProgressText="True" ProgressTextFormat="{Binding ElapsedLabel}" VerticalAlignment="Center" />
				</Grid>
			</Expander.Header>
			<ScrollViewer
				ScrollViewer.VerticalScrollBarVisibility="Visible"
				ScrollViewer.HorizontalScrollBarVisibility="Disabled">
				<ItemsRepeater
					ItemsSource="{Binding Items}"
					>
					<ItemsRepeater.ItemTemplate>
						<DataTemplate>
							<TextBlock
								Text="{Binding Path=Text}"
								Foreground="{Binding Path=BackColor}"
								TextWrapping="Wrap"
							/>
						</DataTemplate>
					</ItemsRepeater.ItemTemplate>
				</ItemsRepeater>
			</ScrollViewer>
		</Expander>

		<WrapPanel HorizontalAlignment="Right" Grid.Row="2" Margin="24 8 24 8">
			<StackPanel VerticalAlignment="Center" Margin="4" IsVisible="{Binding TaskNotCompleted}">
				<Label HorizontalAlignment="Stretch" VerticalAlignment="Center" ToolTip.Tip="{Binding AfterTaskSelection_Help}" Content="{Binding AfterTaskSelection_Field}" />
				<ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Center" ItemsSource="{Binding PowerTasks}" SelectedIndex="{Binding SelectedPowerTask}" />
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Button
					IsVisible="{Binding IsStartButtonVisible}"
					VerticalAlignment="Center"
					Margin="4"
					Padding="16"
					ToolTip.Tip="{Binding Task_Launch_Hint}"
					Foreground="Green"
					Command="{Binding StartTaskCommand}">
					<Path
						Data="{StaticResource play_regular}"
						Stroke="{Binding $parent.Foreground}"
						Fill="{Binding $parent.Foreground}"
						StrokeThickness="1"
						Width="32"
						Height="32"
						Stretch="Uniform"
					/>
				</Button>
				<Button
					IsVisible="{Binding IsStopButtonEnabled}"
					VerticalAlignment="Center"
					Margin="4"
					Padding="16"
					MinWidth="40"
					Foreground="Red"
					ToolTip.Tip="{Binding Button_Cancel}"
					Command="{Binding StopTaskCommand}">
					<Path
						Data="{StaticResource stop_regular}"
						Stroke="{Binding $parent.Foreground}"
						Fill="{Binding $parent.Foreground}"
						StrokeThickness="1"
						Width="32"
						Height="32"
						Stretch="Uniform"
					/>
				</Button>
				<Button
					IsVisible="{Binding CanClose}"
					VerticalAlignment="Center"
					Margin="4"
					Padding="16"
					MinWidth="40"
					Content="{Binding Button_Close}"
					Command="{Binding CloseCommand}"
				/>
			</StackPanel>
		</WrapPanel>
	</Grid>


</UserControl>
