    xmlns:vm="clr-namespace:butil_ui.ViewModels"
    mc:Ignorable="d"
	d:DesignWidth="800"
	d:DesignHeight="450"
    x:Class="butil_ui.Views.LaunchTaskView"
	x:DataType="vm:LaunchTaskViewModel"
	Loaded="OnLoaded">
